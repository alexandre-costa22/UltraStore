@model UltraStore.Models.Game

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Franchise.Name)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Developer.Name)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publisher.Name)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Platforms.Name)
        </dd>

    </dl>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> 
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>

</div>
