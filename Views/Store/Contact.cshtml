@{
    ViewData["Title"] = "Contato";
    Layout = "_StoreLayout";  // Certificando que estamos usando o layout do seu projeto
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-center" style="color: #FFA500;">@ViewData["Title"]</h3>
            <p class="text-center">
                Se você tiver alguma dúvida ou quiser entrar em contato conosco, por favor preencha o formulário abaixo.
            </p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8 offset-md-2">
            <form method="post" action="/Home/Contact">
                <div class="form-group">
                    <label for="name">Nome</label>
                    <input type="text" class="form-control" id="name" name="name" required placeholder="Seu nome">
                </div>
                <div class="form-group mt-3">
                    <label for="email">E-mail</label>
                    <input type="email" class="form-control" id="email" name="email" required placeholder="Seu e-mail">
                </div>
                <div class="form-group mt-3">
                    <label for="message">Mensagem</label>
                    <textarea class="form-control" id="message" name="message" rows="4" required placeholder="Sua mensagem"></textarea>
                </div>

                <button type="button" class="btn btn-primary mt-3" onclick="return false;">Enviar</button>
            </form>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12 text-center">
            <h5 style="color: #FFA500;">Nosso Endereço</h5>
            <p>Rua Guilherme Gemballa, 260, Rio do Sul, SC, Brasil</p>
            <h5 style="color: #FFA500;">Telefone</h5>
            <p>+47 99235 1724</p>
            <h5 style="color: #FFA500;">E-mail</h5>
            <p>suporte@lvlup.com</p>
        </div>
    </div>
</div>
