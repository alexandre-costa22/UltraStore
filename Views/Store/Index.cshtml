@model IEnumerable<LvlUp.Models.Game>

@{
    Layout = "_StoreLayout";
}

<div class="text-center mt-5">
    <h1 class="display-4 fade-in" style="color: #FFA500;">
        LVL-UP Store,
    </h1>
    <p class="fade-in fs-4">
        a sua loja definitiva para games épicos e aventuras inesquecíveis!
    </p>
    <p class="fade-in fs-6">
        Descubra promoções incríveis, novidades imperdíveis e jogos que vão elevar o seu nível de diversão. 🚀🎮
    </p>
</div>

<!-- Search Form -->
<div class="search-container text-center mt-4">
    <form asp-action="Index" method="get" class="d-inline-block w-50">
        <input type="text" name="query" class="form-control" placeholder="Digite o título do jogo..." value="@ViewData["query"]" />
        <button type="submit" class="btn btn-primary mt-2">Buscar</button>
    </form>
</div>

<div class="swiper-container mt-5">
    <!-- Wrapper -->
    <div class="swiper-wrapper">
        @if (Model != null && Model.Any())
        {
            @foreach (var game in Model)
            {
                <div class="swiper-slide">
                    <!-- Slide Content -->
                    <div class="game-card">
                        <a href="@Url.Action("GameInfo", "Store", new { id = game.Id })">
                            <img src="@Url.Content($"~/{game.ImagePath}")" alt="@game.Title" class="game-image" />
                            <h3 class="game-title">@game.Title</h3>
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="swiper-slide">
                <p class="text-center text-muted">Nenhum jogo encontrado com a busca.</p>
            </div>
        }
    </div>

    <!-- Navigation buttons -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>

    <!-- Pagination -->
    <div class="swiper-pagination"></div>
</div>

@section Scripts {
    <!-- Swiper.js -->
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

    <!-- Swiper Initialization -->
    <script>
        const swiper = new Swiper('.swiper-container', {
            loop: true,
            slidesPerView: 2,
            spaceBetween: 20,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            autoplay: {
                delay: 3000,
                disableOnInteraction: false,
            },
        });
    </script>
}

<style>
    .swiper-container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px 0;
    }

    .swiper-slide {
        text-align: center;
    }

    .game-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
    }

    .game-image-container {
        width: 100%;
        max-width: 300px;
        height: 200px; /* Ou qualquer altura desejada */
        background-color: #333; /* Cor sólida de fundo */
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        border-radius: 8px;
    }

    .game-image {
        max-width: 100%;
        height: 100%;
        object-fit: cover; /* Garante que a imagem preencha o contêiner sem distorcer */
    }

    .game-title {
        font-size: 1.2rem;
        color: #333;
    }

    .search-container {
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #FFA500;
        border-color: #FFA500;
    }

        .btn-primary:hover {
            background-color: #FF8800;
            border-color: #FF8800;
        }
</style>
