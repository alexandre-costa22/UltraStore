@model IEnumerable<LvlUp.Models.Game>

@{
    Layout = "_StoreLayout";
}

<div class="text-center mt-5">
    <h1 class="display-4 fade-in" style="color: #FFA500;">
        LVL-UP Store,
    </h1>
    <p class="fade-in fs-4">
        a sua loja definitiva para games épicos e aventuras inesquecíveis!
    </p>
    <p class="fade-in fs-6">
        Descubra promoções incríveis, novidades imperdíveis e jogos que vão elevar o seu nível de diversão. 🚀🎮
    </p>
</div>

<div class="swiper-container mt-5">
    <!-- Wrapper -->
    <div class="swiper-wrapper">
        @foreach (var game in Model)
        {
            <div class="swiper-slide">
                <!-- Slide Content -->
                <div class="game-card">
                    <img src="@Url.Content($"~/{game.ImagePath}")" alt="@game.Title" class="game-image" />
                    <h3 class="game-title">@game.Title</h3>
                </div>
            </div>
        }
    </div>

    <!-- Navigation buttons -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>

    <!-- Pagination -->
    <div class="swiper-pagination"></div>
</div>

@section Scripts {
    <!-- Swiper.js -->
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

    <!-- Swiper Initialization -->
    <script>
        const swiper = new Swiper('.swiper-container', {
            loop: true,
            slidesPerView: 2,
            spaceBetween: 20,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            autoplay: {
                delay: 3000,
                disableOnInteraction: false,
            },
        });
    </script>
}

<style>
    .swiper-container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px 0;
    }

    .swiper-slide {
        text-align: center;
    }

    .game-card {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .game-image {
        width: 100%;
        max-width: 300px;
        border-radius: 8px;
        margin-bottom: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .game-title {
        font-size: 1.2rem;
        color: #333;
    }
</style>
