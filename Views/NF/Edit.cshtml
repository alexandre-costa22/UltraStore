@model UltraStore.Models.Nota

@{
    ViewData["Title"] = "Editar Nota Fiscal";
}

<h1>Editar Nota Fiscal #@Model.Id</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="PurchaseDate">Data da Compra</label>
        <input type="date" class="form-control" id="PurchaseDate" name="PurchaseDate" value="@Model.PurchaseDate.ToString("yyyy-MM-dd")" required />
    </div>
    <div class="form-group">
        <label for="ClientId">Cliente</label>
        <select asp-for="ClientId" class="form-control" asp-items="ViewBag.Clients"></select>
    </div>
    <div class="form-group">
        <label for="SellerId">Vendedor</label>
        <select asp-for="SellerId" class="form-control" asp-items="ViewBag.Sellers"></select>
    </div>
    <div class="form-group">
        <label for="Games">Jogos</label>
        <select asp-for="Games" class="form-control" asp-items="ViewBag.Games" multiple="multiple"></select>
    </div>
    <div class="form-group">
        <label for="TotalPrice">Preço Total</label>
        <input type="number" class="form-control" id="TotalPrice" name="TotalPrice" value="@Model.TotalPrice" step="0.01" required />
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
</form>

<a href="@Url.Action("Index", "NF")" class="btn btn-secondary">Voltar</a>
