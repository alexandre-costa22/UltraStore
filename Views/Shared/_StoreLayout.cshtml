                <!-- Collapsible wrapper -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- Navbar brand -->
                    <a class="navbar-brand mt-2 mt-lg-0" href="#">
                        <img src="~/logo.png"
                             alt="LVL-UP Store Logo"
                             style="max-height: 200px !important; width: auto !important; object-fit: contain; height: 100%;"
                             loading="lazy" />
                    </a>

                    <!-- Left links -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Store" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Store" asp-action="Games">Jogos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Store" asp-action="Deals">Promoções</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Store" asp-action="NewReleases">Novidades</a>
                        </li>
                    </ul>
                    <!-- Search box centered -->
@*                     <div class="d-flex justify-content-center flex-grow-1">
                        <input type="text" id="searchInput" class="form-control" placeholder="Pesquise algum produto aqui." style="max-width: 400px; width: 50%;" />
                    </div>

                    <div id="searchResults" class="mt-2" style="display: none;"></div> *@

                </div>
                <!-- Collapsible wrapper -->
                <!-- Right elements -->
                <div class="d-flex align-items-center">
                    <!-- Botão de Carrinho com imagem maior -->
                    <a href="@Url.Action("Index", "Cart")" class="text-reset me-3">
                        <button class="btn">
                            <img src="~/shoppingcart.png" alt="Carrinho" style="width: 40px; height: auto;" />
                        </button>
                    </a>

                    <!-- Notifications -->
                    <div class="dropdown">
                        <a class="text-reset me-3 dropdown-toggle hidden-arrow"
                           href="#"
                           id="navbarDropdownMenuLink"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <i class="fas fa-bell"></i>
                            <span class="badge rounded-pill badge-notification bg-danger">1</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end"
                            aria-labelledby="navbarDropdownMenuLink">
                            <li>
                                <a class="dropdown-item" href="#">Novidade em promoções</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">Novos jogos adicionados</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">Outras atualizações</a>
                            </li>
                        </ul>
                    </div>

                    <!-- User avatar -->
                    <div class="dropdown">
                        <a class="dropdown-toggle d-flex align-items-center hidden-arrow"
                           href="#"
                           id="navbarDropdownMenuAvatar"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/a/ac/Default_pfp.jpg"
                                 class="rounded-circle"
                                 height="30"
                                 alt="User Avatar"
                                 loading="lazy" />
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end"
                            aria-labelledby="navbarDropdownMenuAvatar">
                            <li>
                                <a class="dropdown-item" href="#">Meu Perfil</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">Configurações</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">Sair</a>
                            </li>
                        </ul>
                    </div>
                    @Html.Partial("_LoginPartial")
                </div>
                <!-- Right elements -->
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted text-center py-3">
        <div class="container">
            &copy; 2024 - LVL-UP Store - Todos os direitos reservados
            <br />
            <a href="/Home" class="btn btn-link">Painel Administrativo</a>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Seleciona o campo de busca e a área de resultados
        const searchInput = document.getElementById('searchInput');
        const searchResults = document.getElementById('searchResults');

        // Função para lidar com a pesquisa
        searchInput.addEventListener('keyup', function() {
            const query = searchInput.value.trim();

            // Verifica se a pesquisa não está vazia
            if (query.length > 0) {
                // Faz a requisição AJAX
                fetch(`/Store/SearchGames?query=${encodeURIComponent(query)}`)
                    .then(response => response.json())
                    .then(data => {
                        // Atualiza os resultados
                        searchResults.innerHTML = '';

                        if (data.results.length > 0) {
                            data.results.forEach(game => {
                                const resultItem = document.createElement('div');
                                resultItem.classList.add('result-item');
                                resultItem.innerHTML = `<strong>${game.title}</strong>`;
                                searchResults.appendChild(resultItem);
                            });
                            searchResults.style.display = 'block';
                        } else {
                            searchResults.style.display = 'none';
                        }
                    })
                    .catch(error => console.error('Erro na pesquisa:', error));
            } else {
                searchResults.style.display = 'none';
            }
        });
    </script>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    @RenderSection("Scripts", required: false)


</body>
</html>
