@{
    ViewData["Title"] = "Página não encontrada";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/error-pages.css" rel="stylesheet" />
</head>

<body>
    <div class="container error-container text-center">
        <!-- A imagem ficou maior, mas de forma equilibrada -->
        <img src="~/confused_sonic.jpg" alt="Sonic Confuso" class="img-fluid" style="width: 50%; max-width: none;" />
        <div class="error-code">404</div>
        <div class="error-message">Parece que o Sonic não conseguiu achar o que você estava procurando...</div>
        <p>Mas não se preocupe, ele corre rápido e vai continuar procurando!</p>
        <a href="/" class="back-link">Voltar pra página principal</a>
    </div>
</body>

</html>
